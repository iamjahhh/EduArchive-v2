{
    "version": 2,
    "functions": {
        "api/*.js": {
            "maxDuration": 10,
            "memory": 1024,
            "maxLambdaSize": "50mb"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}